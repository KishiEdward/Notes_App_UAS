@startuml

!theme plain
hide circle
skinparam linetype ortho

entity "Users" as user {
  *uid : string <<PK>>
  --
  email : string
  displayName : string
  photoURL : string
  settings : map
}

entity "Notes" as note {
  *id : string <<PK>>
  --
  *ownerId : string <<FK>>
  title : string
  content : string
  status : string
  isPinned : boolean
  createdAt : timestamp
}

user ||..o{ note : "has many"

@enduml